{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "target": "ES6",  
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "jsx": "react",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "lib": ["es7", "dom", "es2017.object"],
    "outDir": "build",
    "declaration": true
  },
  "include": [
    "lib"
  ],
  "exclude": ["node_modules"]
}
